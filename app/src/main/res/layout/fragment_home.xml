<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraintLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="60dp"
    android:paddingBottom="80dp"
    android:background="@color/white_200"
    tools:context=".HomeFragment">

    <ImageView
        android:id="@+id/img_home1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/home_4"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:contentDescription="@string/desc_8"/>

    <TextView
        android:id="@+id/text_home1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/home_1"
        android:textSize="50sp"
        android:fontFamily="@font/inter"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="@+id/img_home1"
        app:layout_constraintEnd_toEndOf="@+id/img_home1"
        app:layout_constraintStart_toStartOf="@+id/img_home1"
        app:layout_constraintTop_toTopOf="@+id/img_home1" />

    <View
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@drawable/button_4"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:elevation="-2dp"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="@drawable/button_5"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:elevation="-2dp"/>

    <ImageView
        android:id="@+id/img_login1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:src="@drawable/login_1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:contentDescription="@string/desc_4"
        android:elevation="-1dp"/>

    <ImageView
        android:id="@+id/img_login3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:src="@drawable/login_4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:contentDescription="@string/desc_4"
        android:elevation="-1dp"/>







</androidx.constraintlayout.widget.ConstraintLayout>